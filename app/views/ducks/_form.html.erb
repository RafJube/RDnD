<div class="container">
  <h2> Add a new duck</h2>
  <hr>
  <%= simple_form_for(@duck) do |f| %>
    <div class="row justify-content-center">
      <div class="col-auto">
          <p>Duck name</p><%= f.input :name , label: false %>
      </div>
      <div class="col-auto">
          <p></p><%= f.input :skills, as: :check_boxes, include_hidden: false, collection: Skill.all, label: false %>
      </div>
      <div class="col-auto">
          <p>Add a photo:</p><%= f.input :photo, as: :file, label: false %>
      </div>
      <div class="col-auto">
          <p>Description:</p><%= f.input :description, label: false %>
      </div>
      <div class="col-auto">
          <p>Price â‚¬</p><%= f.input :price, label: false %>
      </div>
      <div>
          <%= f.submit "Confirm", class: "btn btn-flat" %>
      </div>
    </div>
  <% end %>
</div>
